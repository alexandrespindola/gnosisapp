{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*", "*.ts"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "target": "ESNext", // Define a versão do JavaScript a ser emitida
    "module": "ESNext", // Define o sistema de módulos
    "strict": true, // Ativa todas as verificações estritas
    "esModuleInterop": true, // Habilita a interoperabilidade entre módulos CommonJS e ES
    "skipLibCheck": true, // Ignora verificações de tipo em arquivos de definição de biblioteca
    "forceConsistentCasingInFileNames": true // Garante consistência no uso de nomes de arquivos
  }
}
